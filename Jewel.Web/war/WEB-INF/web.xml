<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<!-- Listeners -->
	<listener>
		<listener-class>Jewel.Web.server.Global</listener-class>
	</listener>
	<listener>
    	<listener-class>org.apache.commons.fileupload.servlet.FileCleanerCleanup</listener-class>
	</listener>

	<!-- Servlets -->
	<servlet>
		<servlet-name>LoginServiceImpls</servlet-name>
		<servlet-class>Jewel.Web.server.LoginServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>TreeServiceImpls</servlet-name>
		<servlet-class>Jewel.Web.server.TreeServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DynaFormServiceImpls</servlet-name>
		<servlet-class>Jewel.Web.server.DynaFormServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DynaFormActiveServiceImpls</servlet-name>
		<servlet-class>Jewel.Web.server.DynaFormActiveServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DynaSearchServiceImpls</servlet-name>
		<servlet-class>Jewel.Web.server.DynaSearchServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DynaGridServiceImpls</servlet-name>
		<servlet-class>Jewel.Web.server.DynaGridServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DynaViewServiceImpls</servlet-name>
		<servlet-class>Jewel.Web.server.DynaViewServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LookupServiceImpls</servlet-name>
		<servlet-class>Jewel.Web.server.LookupServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ValueServiceImpls</servlet-name>
		<servlet-class>Jewel.Web.server.ValueServiceImpl</servlet-class>
	</servlet>
	<servlet>
	    <servlet-name>FileServiceImpls</servlet-name>
	    <servlet-class>Jewel.Web.server.FileServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DynaReportServiceImpls</servlet-name>
		<servlet-class>Jewel.Web.server.DynaReportServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ReportServiceImpls</servlet-name>
		<servlet-class>Jewel.Web.server.ReportServiceImpl</servlet-class>
	</servlet>

	<!-- Servlet Mappings -->
	<servlet-mapping>
		<servlet-name>LoginServiceImpls</servlet-name>
		<url-pattern>/jewel_web/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TreeServiceImpls</servlet-name>
		<url-pattern>/jewel_web/tree</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DynaFormServiceImpls</servlet-name>
		<url-pattern>/jewel_web/dynaform</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DynaFormActiveServiceImpls</servlet-name>
		<url-pattern>/jewel_web/dynaformactive</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DynaSearchServiceImpls</servlet-name>
		<url-pattern>/jewel_web/dynasearch</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DynaGridServiceImpls</servlet-name>
		<url-pattern>/jewel_web/dynagrid</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DynaViewServiceImpls</servlet-name>
		<url-pattern>/jewel_web/dynaview</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LookupServiceImpls</servlet-name>
		<url-pattern>/jewel_web/lookup</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ValueServiceImpls</servlet-name>
		<url-pattern>/jewel_web/value</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	  <servlet-name>FileServiceImpls</servlet-name>
	  <url-pattern>/jewel_web/file</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DynaReportServiceImpls</servlet-name>
		<url-pattern>/jewel_web/dynareport</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ReportServiceImpls</servlet-name>
		<url-pattern>/jewel_web/report</url-pattern>
	</servlet-mapping>

<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>Jewel_Web.html</welcome-file>
	</welcome-file-list>

    <session-config>
      <session-timeout>60</session-timeout> 
    </session-config>

